{
  "manifest_version": 3,
  "name": "FB Share Extension",
  "version": "1.2",
  "description": "Facebook Share Tool Extension with Monochrome Purple Design",
  "permissions": [
    "cookies",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://vern-rest-api.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}