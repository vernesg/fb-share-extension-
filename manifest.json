{
  "manifest_version": 3,
  "name": "Facebook Share Tool",
  "version": "1.0",
  "description": "A tool to share Facebook posts using cookies and tokens.",
  "permissions": [
    "cookies",
    "storage",
    "https://business.facebook.com/*",
    "https://graph.facebook.com/*"
  ],
  "host_permissions": [
    "https://business.facebook.com/*",
    "https://graph.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}